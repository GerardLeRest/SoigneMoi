{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "Serveur_Flask2.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"  // Set to 1 to enable debugging
            },
            "args": [
                "run",
                "--no-debugger",  // Remove or set to "--debugger" to use Flask debugger
                "--no-reload"     // Remove or set to "--reload" for automatic reloading
            ],
            "jinja": true
        }
    ]
}